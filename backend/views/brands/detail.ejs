<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title><%= brand.name %> - Chi tiết thương hiệu</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <style>
      body {
        background-color: #0c0c0c;
        color: #fff;
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
      }

      .profile-container {
        width: 90%;
        max-width: 600px;
        margin: 60px auto;
        background: #111;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(196, 30, 58, 0.35);
      }

      h1 {
        text-align: center;
        color: #c41e3a;
        margin-bottom: 35px;
        letter-spacing: 1px;
      }

      .info-item {
        margin-bottom: 18px;
      }

      .info-item label {
        display: block;
        color: #ccc;
        margin-bottom: 5px;
        font-size: 15px;
        letter-spacing: 0.5px;
      }

      .info-item span {
        display: block;
        background: #1a1a1a;
        padding: 10px 12px;
        border-radius: 6px;
        color: #fff;
      }

      .info-item a {
        color: #c41e3a;
        text-decoration: none;
      }

      .info-item a:hover {
        text-decoration: underline;
      }

      .btn-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
        gap: 15px;
        margin-top: 30px;
      }

      .btn {
        padding: 12px;
        border-radius: 6px;
        border: none;
        color: #fff;
        cursor: pointer;
        font-size: 15px;
        transition: 0.3s;
        text-align: center;
        text-decoration: none;
      }

      .btn-edit {
        background: #c41e3a;
      }

      .btn-edit:hover {
        background: #a0142e;
      }

      .btn-delete {
        background: #700;
      }

      .btn-delete:hover {
        background: #a00;
      }

      .btn-back {
        background: #333;
      }

      .btn-back:hover {
        background: #444;
      }
    </style>
  </head>

  <body>
    <!-- Sidebar admin -->
    <%- include('../partials/admindashboard') %>

    <div class="profile-container">
      <h1>Chi tiết thương hiệu</h1>

      <div class="info-item">
        <label>Tên thương hiệu</label>
        <span><%= brand.name %></span>
      </div>

      <div class="info-item">
        <label>Quốc gia</label>
        <span><%= brand.country || "Không rõ" %></span>
      </div>

      <div class="info-item">
        <label>Năm thành lập</label>
        <span><%= brand.foundedYear || "Chưa cập nhật" %></span>
      </div>

      <div class="info-item">
        <label>Website</label>
        <% if (brand.website) { %>
          <span>
            <a href="<%= brand.website %>" target="_blank"><%= brand.website %></a>
          </span>
        <% } else { %>
          <span>Chưa có website</span>
        <% } %>
      </div>

      <div class="info-item">
        <label>Mô tả</label>
        <span><%= brand.description || "Chưa có mô tả" %></span>
      </div>

      <div class="btn-container">
        <% if (member && member.role === 'admin') { %>
          <a href="/brands/<%= brand._id %>/edit" class="btn btn-edit">
            <i class="fa-solid fa-pen-to-square"></i> Sửa
          </a>
          <a
            href="/brands/<%= brand._id %>/delete"
            class="btn btn-delete"
            onclick="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này?')"
          >
            <i class="fa-solid fa-trash"></i> Xóa
          </a>
        <% } %>
        <a href="/brands" class="btn btn-back">
          <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
      </div>
    </div>
  </body>
</html>
